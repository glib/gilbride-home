---
export interface Props {
  /**
   * The URL path this link points to
   */
  href: string;
  /**
   * The current page path for active state detection
   */
  currentPath?: string;
  /**
   * Link text content
   */
  text: string;
  /**
   * External link flag - adds target="_blank" and rel attributes
   */
  external?: boolean;
  /**
   * Additional CSS classes to apply
   */
  class?: string;
}

const { href, currentPath, text, external = false, class: className = '' } = Astro.props;

const isActive = currentPath === href;
const baseClasses = "font-heading font-medium text-sm sm:text-base transition-colors py-2 px-1 sm:px-2 min-h-[44px] flex items-center touch-manipulation";
const stateClasses = isActive 
  ? "text-highlight" 
  : "text-text-primary hover:text-highlight";

const externalAttrs = external 
  ? { target: "_blank", rel: "noopener" }
  : {};
---

<a 
  href={href}
  class={`${baseClasses} ${stateClasses} ${className}`}
  {...externalAttrs}
>
  {text}
</a>