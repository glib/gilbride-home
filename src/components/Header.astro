---
import { Image } from 'astro:assets';
import Container from './Container.astro';
import NavLink from './NavLink.astro';

export interface Props {
  currentPath?: string;
}

const { currentPath = "/" } = Astro.props;
---

<nav class="bg-secondary border-b border-tertiary sticky top-0 z-10">
  <Container>
    <div class="flex justify-between items-center py-4">
      <a href="/" class="flex items-center gap-2 sm:gap-3 touch-manipulation">
        <Image 
          src="/logo.png" 
          alt="Work From Loam Logo" 
          class="w-12 h-12 sm:w-16 sm:h-16 rounded-full object-cover"
          width={64}
          height={64}
          loading="eager"
        />
        <div class="w-12 h-12 sm:w-16 sm:h-16 bg-highlight rounded-full flex items-center justify-center font-bold text-primary text-lg sm:text-xl hidden">
          WFL
        </div>
        <div>
          <h1 class="text-base sm:text-lg lg:text-xl xl:text-2xl font-heading font-bold text-text-primary">Work From Loam</h1>
          <p class="text-xs sm:text-sm text-text-primary mt-0.5 sm:mt-1 font-heading">Remote Work, Code & Mountain Biking</p>
        </div>
      </a>
      <!-- Mobile Navigation -->
      <div class="flex items-center space-x-2 sm:space-x-4 md:space-x-6">
        <!-- Mobile: Show only essential links -->
        <NavLink 
          href="/" 
          currentPath={currentPath}
          text="Home"
          class="hidden sm:block"
        />
        <NavLink 
          href="/posts" 
          currentPath={currentPath}
          text="Posts"
        />
        <NavLink 
          href="/about" 
          currentPath={currentPath}
          text="About"
        />
        <a 
          href="https://youtube.com/@workfromloam" 
          target="_blank" 
          rel="noopener" 
          class="text-text-primary hover:text-highlight transition-colors font-heading font-medium flex items-center gap-1 text-sm sm:text-base min-h-[44px] items-center"
          title="YouTube Channel"
        >
          <svg class="w-4 h-4 sm:w-5 sm:h-5" viewBox="0 0 24 24">
            <path fill="#FF0000" d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814z"/>
            <path fill="#FFFFFF" d="M9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
          </svg>
          <span class="hidden md:inline">YouTube</span>
        </a>
      </div>
    </div>
  </Container>
</nav>