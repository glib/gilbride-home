---
import BaseLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  youtubeId?: string;
  tags?: string[];
}

// Date formatting utility
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

const { title, description, pubDate, updatedDate, heroImage, youtubeId, tags = [] } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <nav class="bg-white border-b border-gray-200 sticky top-0 z-10">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <a href="/" class="text-xl font-heading font-bold text-gray-900 hover:text-blue-600 transition-colors">
          Work From Loam
        </a>
        <div class="flex space-x-6">
          <a href="/" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">Posts</a>
          <a href="/about" class="text-gray-600 hover:text-gray-900 transition-colors font-medium">About</a>
        </div>
      </div>
    </div>
  </nav>

  <main class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <article>
      <header class="mb-8">
        {youtubeId && (
          <div class="aspect-video mb-6">
            <iframe
              class="w-full h-full rounded-lg"
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        )}
        
        {!youtubeId && heroImage && (
          <img
            class="w-full h-64 sm:h-80 object-cover rounded-lg mb-6"
            src={heroImage}
            alt={title}
          />
        )}
        
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-bold text-gray-900 mb-4 leading-tight" style="letter-spacing: -0.02em;">
          {title}
        </h1>
        
        <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-6">
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          {updatedDate && (
            <span>
              Â· Updated {formatDate(updatedDate)}
            </span>
          )}
        </div>
        
        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mb-6">
            {tags.map((tag) => (
              <a
                href={`/tags/${tag}`}
                class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 hover:bg-blue-200 transition-colors"
              >
                #{tag}
              </a>
            ))}
          </div>
        )}
      </header>

      <div class="prose prose-lg prose-gray max-w-none">
        <slot />
      </div>
    </article>

    <!-- Comments Section -->
    <section class="mt-16 border-t border-gray-200 pt-8">
      <h3 class="text-xl font-heading font-semibold mb-6">Comments</h3>
      <div id="giscus-container" class="giscus"></div>
    </section>
  </main>
</BaseLayout>
