---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  youtubeId?: string;
  tags?: string[];
}

// Date formatting utility
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

const { title, description, pubDate, updatedDate, heroImage, youtubeId, tags = [] } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <Header />

  <main class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <article>
      <header class="mb-8">
        {youtubeId && (
          <div class="aspect-video mb-6">
            <iframe
              class="w-full h-full rounded-lg"
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        )}
        
        {!youtubeId && heroImage && (
          <img
            class="w-full h-64 sm:h-80 object-cover rounded-lg mb-6"
            src={heroImage}
            alt={title}
          />
        )}
        
        <h1 class="heading-xl mb-4">
          {title}
        </h1>
        
        <div class="flex items-center gap-3 text-xs sm:text-sm text-slate-400 mb-6">
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          {updatedDate && (
            <span>
              · Updated {formatDate(updatedDate)}
            </span>
          )}
          {tags.length > 0 && (
            <>
              <span>•</span>
              <div class="flex flex-wrap gap-1">
                {tags.map((tag) => (
                  <span class="text-orange-400 text-xs font-medium">
                    #{tag}
                  </span>
                ))}
              </div>
            </>
          )}
        </div>
      </header>

      <div class="prose-universal">
        <slot />
      </div>
    </article>

    <!-- Comments Section -->
    <section class="mt-16 border-t border-slate-600 pt-8">
      <h3 class="heading-md mb-6">Comments</h3>
      <div id="giscus-container" class="giscus"></div>
    </section>
  </main>

  <Footer />
</BaseLayout>
