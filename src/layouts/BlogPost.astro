---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Container from '../components/Container.astro';
import PostMetadata from '../components/PostMetadata.astro';
import Comments from '../components/Comments.astro';
import { formatDate } from '../utils/date';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  youtubeId?: string;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, heroImage, youtubeId, tags = [] } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <Header />

  <main>
    <Container class="py-8">
    <article>
      <header class="mb-8">
        {youtubeId && (
          <div class="aspect-video mb-6">
            <iframe
              class="w-full h-full rounded-lg"
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        )}
        
        {!youtubeId && heroImage && (
          <img
            class="w-full h-64 sm:h-80 object-cover rounded-lg mb-6"
            src={heroImage}
            alt={title}
          />
        )}
        
        <h1 class="heading-xl mb-4">
          {title}
        </h1>
        
        <PostMetadata 
          pubDate={pubDate}
          updatedDate={updatedDate}
          tags={tags}
          class="mb-6 text-xs sm:text-sm"
        />
      </header>

      <div class="prose-universal">
        <slot />
      </div>
    </article>

    <!-- Comments Section -->
    <Comments />
    </Container>
  </main>

  <Footer />
</BaseLayout>
