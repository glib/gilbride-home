---
import { Image } from 'astro:assets';
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Container from '../components/Container.astro';
import PostMetadata from '../components/PostMetadata.astro';
import Comments from '../components/Comments.astro';
import { formatDate } from '../utils/date';

export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  heroImage?: string;
  youtubeId?: string;
  tags?: string[];
}

const { title, description, pubDate, updatedDate, heroImage, youtubeId, tags = [] } = Astro.props;
---

<BaseLayout title={title} description={description} image={heroImage}>
  <Header />

  <main>
    <Container class="py-8">
    <article>
      <header class="mb-8">
        {youtubeId && (
          <div class="aspect-video mb-6">
            <iframe
              class="w-full h-full rounded-lg"
              src={`https://www.youtube.com/embed/${youtubeId}`}
              title={title}
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        )}
        
        {!youtubeId && heroImage && (
          <Image
            class="w-full h-64 sm:h-80 object-cover rounded-lg mb-6"
            src={heroImage}
            alt={title}
            width={800}
            height={320}
            loading="eager"
          />
        )}
        
        <!-- Draft indicator for development -->
        {import.meta.env.DEV && Astro.url.pathname.includes('/drafts/') && (
          <div class="inline-flex items-center gap-2 mb-4 px-3 py-1 bg-warm/20 border border-warm rounded-full text-sm font-heading font-medium text-warm">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
            </svg>
            Draft Post
          </div>
        )}
        
        <h1 class="heading-xl mb-4">
          {title}
        </h1>
        
        <PostMetadata 
          pubDate={pubDate}
          updatedDate={updatedDate}
          tags={tags}
          class="mb-6 text-xs sm:text-sm"
        />
      </header>

      <div class="prose-universal">
        <slot />
      </div>
    </article>

    <!-- Comments Section -->
    <Comments />
    </Container>
  </main>

  <Footer />
</BaseLayout>
